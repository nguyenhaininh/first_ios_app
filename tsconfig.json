{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "outDir": "build",
    "sourceMap": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "lib": ["dom", "es2015", "es2016"],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "importHelpers": true,
    "strict": true,
    "noImplicitReturns": true,
    "sourceRoot": "src",
    "rootDir": "src",
    "skipLibCheck": true,
    "noUnusedLocals": true,
  },
  "exclude": [
    "**/__tests__",
    "src/common/platform/node"
  ]
}
